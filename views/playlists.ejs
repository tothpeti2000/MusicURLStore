<%- include("header") %>

<body>
  <%- include("navbar") %>

  <main class="p-4">
    <div class="d-flex justify-content-between mb-2">
      <h1>
        <a href="./index.html" class="text-muted me-2"
          ><i class="bi bi-arrow-left"></i
        ></a>
        My PlayLists
      </h1>
      <div class="form-floating rounded-2 w-25">
        <input
          type="text"
          id="search"
          class="form-control"
          placeholder="Search"
        />
        <label for="search">
          <i class="bi bi-search"></i>
        </label>
      </div>
    </div>

    <div class="d-flex align-items-center flex-wrap">
      <div class="card w-25 shadow-lg text-center m-3 img-zoom">
        <i
          class="bi bi-x-lg btn btn-outline-danger position-absolute"
          style="right: 0; z-index: 10"
          data-bs-toggle="modal"
          data-bs-target="#deleteModal"
        ></i>
        <img src="assets/Skillet.jpg" alt="Skillet" class="card-img-top" />
        <div class="card-body">
          <h2>Skillet</h2>
          <p>10 tracks</p>
        </div>
        <a href="./playlistdetails.html" class="stretched-link"></a>
      </div>

      <div class="card w-25 shadow-lg text-center m-3 img-zoom">
        <i
          class="bi bi-x-lg btn btn-outline-danger position-absolute"
          style="right: 0; z-index: 10"
          data-bs-toggle="modal"
          data-bs-target="#deleteModal"
        ></i>
        <img src="assets/Spiritbox.jpg" alt="Spiritbox" class="card-img-top" />
        <div class="card-body">
          <h2>Spiritbox</h2>
          <p>5 tracks</p>
        </div>
        <a href="./playlistdetails.html" class="stretched-link"></a>
      </div>

      <div class="card w-25 shadow-lg text-center m-3 img-zoom">
        <i
          class="bi bi-x-lg btn btn-outline-danger position-absolute"
          style="right: 0; z-index: 10"
          data-bs-toggle="modal"
          data-bs-target="#deleteModal"
        ></i>
        <img
          src="assets/Avenged Sevenfold.jpg"
          alt="Avenged Sevenfold"
          class="card-img-top"
        />
        <div class="card-body">
          <h2>Avenged Sevenfold</h2>
          <p>5 tracks</p>
        </div>
        <a href="./playlistdetails.html" class="stretched-link"></a>
      </div>
    </div>
  </main>

  <div
    class="modal fade"
    id="deleteModal"
    tabindex="-1"
    aria-labelledby="Track form"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Delete Playlist</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to remove this playlist from the list?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger">Delete</button>
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Close
          </button>
        </div>
      </div>
    </div>
  </div>

  <button
    class="btn btn-primary rounded-circle position-fixed fs-1"
    style="width: 100px; height: 100px; right: 10px; bottom: 10px"
  >
    +
    <a href="./createplaylist.html" class="stretched-link"></a>
  </button>
  <%- include("footer") %>
</body>
