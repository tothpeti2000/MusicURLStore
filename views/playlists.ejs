<%- include("./components/common/header") %>

<body>
  <%- include("./components/common/navbar") %>

  <main class="p-4">
    <%- include("./components/titleBar", { link: "/", title: "My PlayLists",
    searchLink: "/playlists/search" }) %>

    <div class="d-flex align-items-center flex-wrap">
      <% playlists.forEach(playlist => { %> <%-
      include("./components/playlistCard", { playlist: playlist }) %> <% }) %>
    </div>
  </main>

  <%- include("./components/forms/deletePlaylistForm") %>

  <button
    class="btn btn-primary rounded-circle position-fixed fs-1"
    style="width: 100px; height: 100px; right: 10px; bottom: 10px"
  >
    +
    <a href="/playlists/add" class="stretched-link"></a>
  </button>
  <%- include("./components/common/footer") %>
</body>
