<%- include("./components/common/header") %>

<body>
  <%- include("./components/common/navbar") %>

  <main class="p-4">
    <h1>
      <a href="/playlists" class="text-muted me-2"
        ><i class="bi bi-arrow-left"></i
      ></a>
      Create Playlist
    </h1>

    <table class="table table-hover table-striped" style="width: 60%">
      <thead>
        <tr>
          <th>TITLE</th>
          <th>ARTIST</th>
          <th>DESCRIPTION</th>
        </tr>
      </thead>

      <tbody class="align-text-top">
        <% tracks.forEach(track => { %>
        <tr>
          <td><%= track.title %></td>
          <td><%= track.artist %></td>
          <td><%= track.description %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </main>

  <form
    action="/playlists/add"
    method="POST"
    class="position-fixed p-3 shadow-lg"
    style="top: 25%; left: 65%; width: 30%; height: 60%"
  >
    <div class="mb-3">
      <label for="title" class="form-label fw-bold">Title</label>
      <input
        type="text"
        class="form-control"
        id="title"
        aria-describedby="Title"
      />
    </div>

    <div class="mb-3">
      <label for="img" class="form-label fw-bold">Image Cover</label>
      <input
        type="file"
        class="form-control"
        id="img"
        aria-describedby="Image Cover"
      />
    </div>

    <div class="mb-3">
      <label for="tracks" class="form-label fw-bold">Choose Tracks</label>
      <textarea
        class="form-control"
        id="tracks"
        aria-describedby="Choose Tracks"
      ></textarea>
    </div>
    <button type="submit" class="btn btn-outline-primary btn-lg w-100">
      Add Playlist
    </button>
  </form>

  <%- include("./components/common/footer") %>
</body>
