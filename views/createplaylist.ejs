<%- include("./components/common/header") %>

<body>
  <%- include("./components/common/navbar") %>

  <main class="p-4">
    <%- include("./components/titleBar", { link: "/playlists", title: `Create
    Playlist`}) %>

    <table class="table table-hover table-striped" style="width: 60%">
      <thead>
        <tr>
          <th>TITLE</th>
          <th>ARTIST</th>
          <th>DESCRIPTION</th>
        </tr>
      </thead>

      <tbody class="align-text-top">
        <% tracks.forEach(track => { %>
        <tr>
          <td><%= track.title %></td>
          <td><%= track.artist %></td>
          <td><%= track.description %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </main>

  <%- include("./components/forms/addPlaylistForm") %> <%-
  include("./components/common/footer") %>
</body>
