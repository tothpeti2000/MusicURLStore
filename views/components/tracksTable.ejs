<table class="table table-hover table-striped" style="width: 60%">
  <thead>
    <tr>
      <th>TITLE</th>
      <th>ARTIST</th>
      <th>DESCRIPTION</th>
      <% if (optionsAvailable) { %>
      <th>OPTIONS</th>
      <% } %>
    </tr>
  </thead>

  <tbody class="align-text-top">
    <% tracks.forEach(track => { %>
    <tr>
      <td><%= track.title %></td>
      <td><%= track.artist %></td>
      <td><%= track.description %></td>
      <% if (optionsAvailable) { %>
      <td>
        <i class="bi bi-play-circle-fill btn"></i>
        <a href="/tracks/edit/<%= track._id %>">
          <i class="bi bi-pencil-fill btn"></i
        ></a>
        <!-- TODO: Fix modal ID issue -->
        <a href="/tracks/delete/<%= track._id %>">
          <i class="bi bi-trash3-fill btn"></i
        ></a>
      </td>
      <% } %>
    </tr>
    <% }) %>
  </tbody>
</table>
