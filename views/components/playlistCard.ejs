<div class="card w-25 shadow-lg text-center m-3 img-zoom">
  <i
    class="bi bi-x-lg btn btn-outline-danger position-absolute"
    style="right: 0; z-index: 10"
    data-bs-toggle="modal"
    data-bs-target="#deleteModal"
  ></i>
  <img src="https://picsum.photos/500" alt="Skillet" class="card-img-top" />
  <div class="card-body">
    <h2><%= playlist.name %></h2>
    <p><%= playlist._tracks.length %> tracks</p>
  </div>
  <a href="/playlist/<%= playlist._id %>" class="stretched-link"></a>
</div>
