<%- include("./components/common/header") %>

<body>
  <%- include("./components/common/navbar") %>
  <main class="p-4">
    <%- include("./components/titleBar", { link: "/", title: "My Tracks",
    searchLink: "/tracks/search" }) %> <%- include("./components/tracksTable", {
    tracks: tracks, optionsAvailable: true }) %>
  </main>

  <aside
    class="position-fixed d-flex flex-column justify-content-between p-5"
    style="top: 25%; left: 60%; width: 40%; height: 75%"
  >
    <div class="alert alert-primary text-center p-5 rounded-pill shadow">
      <h1 class="fst-italic">Found a nice song?</h1>
      <a href="/tracks/add">
        <button type="button" class="btn btn-primary w-100">ADD IT HERE</button>
      </a>
    </div>

    <div class="shadow">
      <iframe
        class="w-100"
        src="https://www.youtube.com/embed/lF8s2bZUwlM?autoplay=1"
        title="YouTube video player"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      ></iframe>
      <div class="p-3 rounded">
        <p class="fw-bold mb-0">
          Playing now:
          <span class="fw-normal ms-2">Skillet - Ignite</span>
        </p>
      </div>
    </div>
  </aside>
  <%- include("./components/common/footer") %>
</body>
