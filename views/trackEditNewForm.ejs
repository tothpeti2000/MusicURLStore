<%- include("./components/header") %>

<body>
  <%- include("./components/navbar") %>

  <form action="/tracks/add" method="POST">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">
            <%= typeof track === "undefined" ? "Add Track" : "Edit Track" %>
          </h5>
          <button type="button" class="btn-close" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="url" class="form-label fw-bold">URL</label>
            <input type="text" class="form-control" id="url"
            aria-describedby="URL" value="<%= typeof track === "undefined" ? ""
            : track.url %>" />
          </div>

          <div class="mb-3">
            <label for="title" class="form-label fw-bold">Title</label>
            <input type="text" class="form-control" id="title"
            aria-describedby="Title" value="<%= typeof track === "undefined" ?
            "" : track.title %>" />
          </div>

          <div class="mb-3">
            <label for="artist" class="form-label fw-bold">Artist</label>
            <input type="text" class="form-control" id="artist"
            aria-describedby="Artist" value="<%= typeof track === "undefined" ?
            "" : track.artist %>" />
          </div>

          <div class="mb-3">
            <label for="description" class="form-label fw-bold"
              >Description</label
            >
            <textarea
              type="text"
              class="form-control"
              id="description"
              aria-describedby="Description"
            >
<%= typeof track === "undefined" ? ""
            : track.description %>
                  </textarea
            >
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save</button>
          <a href="/tracks">
            <button type="button" class="btn btn-secondary">Close</button>
          </a>
        </div>
      </div>
    </div>
  </form>
</body>

<%- include("./components/footer") %>
